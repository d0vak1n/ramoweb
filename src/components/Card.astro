---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="flex flex-col bg-slate-500 rounded p-6">
	<li class="link-card list-none">
		<div>
			<h3>
				{title}
			</h3>
			<p>
				{body}
			</p>
			<div class="flex justify-between">
				<a href="">github</a>
				<a href="">demo</a>
			</div>
		</div>
	</li>
</div>

<style>
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
</style>
