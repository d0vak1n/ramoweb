---
import Layout from "../layouts/Layout.astro";
---

<Layout title="RaMoWeb - Contact">
    <main>
        <div class="flex flex-col items-center m-8 align-middle">
            <a
                target="_blank"
                rel="noopener noreferrer"
                href="mailto:raul@ramoweb.com"
            >
                <h4
                    class="header mx-8 my-4 text-center lg:text-4xl sm:text-2xl"
                >
                    raul@ramoweb.com
                </h4>
            </a>
        </div>
        <!-- Cal inline embed code begins -->
        <div class="mx-6">
            <div
                style="width:100%;height:100%;overflow:scroll"
                id="my-cal-inline"
            >
            </div>
        </div>
        <script type="text/javascript">
            (function (C, A, L) {
                let p = function (a, ar) {
                    a.q.push(ar);
                };
                let d = C.document;
                C.Cal =
                    C.Cal ||
                    function () {
                        let cal = C.Cal;
                        let ar = arguments;
                        if (!cal.loaded) {
                            cal.ns = {};
                            cal.q = cal.q || [];
                            d.head.appendChild(d.createElement("script")).src =
                                A;
                            cal.loaded = true;
                        }
                        if (ar[0] === L) {
                            const api = function () {
                                p(api, arguments);
                            };
                            const namespace = ar[1];
                            api.q = api.q || [];
                            if (typeof namespace === "string") {
                                cal.ns[namespace] = cal.ns[namespace] || api;
                                p(cal.ns[namespace], ar);
                                p(cal, ["initNamespace", namespace]);
                            } else p(cal, ar);
                            return;
                        }
                        p(cal, ar);
                    };
            })(window, "https://app.cal.com/embed/embed.js", "init");
            Cal("init", "meetme", { origin: "https://cal.com" });

            Cal.ns.meetme("inline", {
                elementOrSelector: "#my-cal-inline",
                config: { layout: "month_view", theme: "dark" },
                calLink: "ramoar/meetme",
            });

            Cal.ns.meetme("ui", {
                theme: "dark",
                hideEventTypeDetails: false,
                layout: "month_view",
            });
        </script>
        <!-- Cal inline embed code ends -->
    </main>
</Layout>

<style>
    a .header {
        color: #fff;
        transition: text-shadow 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }

    a .header:hover {
        text-shadow:
            0 0 10px #0efeff,
            0 0 20px #0efeff,
            0 0 40px #0efeff,
            0 0 80px #0efeff,
            0 0 160px #0efeff;
    }
</style>
