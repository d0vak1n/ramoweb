---
import Layout from "../layouts/Layout.astro";
---

<Layout title="RaMoWeb - Software Developer and Web Designer">
    <main>
        <div class="flex flex-col gap-10 justify-center">
            <img
                class="rounded-full h-32 w-32 mx-auto"
                src="https://avatars.githubusercontent.com/u/11877941?v=4"
                alt="profile picture"
            />
            <img
                class="mx-auto"
                src="https://github-readme-stats.vercel.app/api/top-langs/?username=d0vak1n&theme=tokyonight"
                alt="github top languages"
            />
            <img
                class="mx-auto"
                src="https://github-readme-stats.vercel.app/api?username=d0vak1n&theme=tokyonight&show_icons=true&hide=stars"
                alt="github profile stats"
            />
        </div>
    </main>
</Layout>
